{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": [
		"main"
	],
	"permissions": [
		"core:default",
		"core:window:allow-set-fullscreen",
		"opener:default",
		"fs:default",
		"fs:scope-home-recursive",
		{
			"identifier": "fs:allow-home-meta-recursive",
			"allow": [
				{
					"path": "$HOME/**/*"
				}
			]
		}
	]
}
